#!/usr/bin/env sh
set -e

echo "Running pre-commit hook (current repo only, works in Windows or WSL)..."
if command -v npm >/dev/null 2>&1; then
	npm run format:check --silent
	npm run typecheck --silent
	exit 0
else
	echo "npm not found in PATH; skipping pre-commit validation. To enable hooks, install Node and run 'npm ci'."
	exit 0
fi
